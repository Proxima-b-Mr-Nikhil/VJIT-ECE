<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="0dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_marginTop="0dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:id="@+id/mlout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginTop="0dp"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">
   <LinearLayout
       android:id="@+id/status"
       android:layout_width="56dp"
       android:layout_marginStart="8dp"
       android:layout_marginTop="10dp"
       android:layout_height="56dp">
       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_width="50dp"
          android:layout_marginStart="3dp"
           android:layout_gravity="center"
           android:layout_height="50dp"
           android:id="@+id/profile"
           android:src="@drawable/defaultpic"/>
       <ImageView
           android:layout_width="20dp"
           android:id="@+id/st"
           android:layout_marginTop="30dp"
           android:layout_height="20dp"
          android:layout_marginStart="-15dp"
           android:src="@drawable/offline"
           android:contentDescription="@string/todo" />

   </LinearLayout>

    <TextView

        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/welcome_to_vjit_ece"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/logout"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-50dp"
        android:src="@drawable/ic_exit_to_app_black_24dp"
        android:contentDescription="@string/todo" />

</LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="-130dp"

                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                app:contentPadding="15dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="3dp"

                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"

                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:id="@+id/vjitpage"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:scaleType="fitXY"
                                android:src="@drawable/vjitpage"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:clickable="false"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:padding="10dp"
                                android:contentDescription="@string/todo" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:clickable="false"
                                android:gravity="center_horizontal"
                                android:text="@string/web_page"
                                android:textColor="@android:color/black" />

                        </LinearLayout>
                        <LinearLayout

                            android:id="@+id/feed"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:scaleType="fitXY"
                                android:src="@drawable/feed"
                                android:clickable="false"
                                android:layout_width="50dp"
                                android:layout_height="51dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"

                                android:padding="10dp"
                                android:contentDescription="@string/todo" />
                            <RelativeLayout
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/feed"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/syllabi"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:layout_marginTop="2dp"
                                android:src="@drawable/syllabi"
                                android:scaleType="fitXY"
                                android:clickable="false"
                                android:layout_width="45dp"
                                android:layout_height="41dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/todo" />
                            <RelativeLayout
                                android:layout_marginTop="13dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/syllabi"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/circular"
                            android:layout_width="0dp"
                            android:clickable="true"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView

                                android:src="@drawable/circular"
                                android:scaleType="fitXY"
                                android:layout_gravity="center_horizontal"

                                android:clickable="false"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/todo" />
                            <RelativeLayout
                                android:layout_marginTop="7dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/circular"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:id="@+id/timetable"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:scaleType="fitXY"
                                android:src="@drawable/timetable"
                                android:clickable="false"
                                android:layout_width="55dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <RelativeLayout
                                android:layout_marginTop="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/time_table"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout

                            android:id="@+id/vjitlogin"
                            android:layout_width="0dp"
                            android:clickable="true"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:scaleType="fitXY"

                                android:src="@drawable/vjitlogin"
                                android:layout_width="45dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="40dp"
                                android:clickable="false"
                                android:layout_margin="5dp"
                                android:contentDescription="@string/todo" />

                            <RelativeLayout
                                android:layout_marginTop="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/login_portal"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/feepayment"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:scaleType="fitXY"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:clickable="false"
                                android:src="@drawable/moneybag"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <RelativeLayout
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/fee_payment"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/examdates"
                            android:clickable="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:focusable="true">

                            <ImageView
                                android:scaleType="fitXY"
                                android:clickable="false"
                                android:src="@drawable/examdates"
                                android:layout_width="55dp"
                                android:layout_height="58dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"

                                android:padding="10dp"
                                android:contentDescription="@string/todo" />

                            <RelativeLayout
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:clickable="false"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/exam_dates"

                                    android:textColor="@android:color/black" />

                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- other parts -->

            <View
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="0.8dp"
                android:background="@color/GRAY" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView


                android:layout_width="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"

                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                app:contentPadding="15dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="3dp"

                android:layout_height="match_parent">

                    <ProgressBar
                       android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/progress_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"

                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="-5dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        app:contentPadding="15dp"
                        app:cardElevation="2dp"
                        app:cardMaxElevation="3dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </androidx.cardview.widget.CardView>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="0.8dp"
                android:background="@color/GRAY" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="@string/home"
                android:id="@+id/ho"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/studymaterial"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="KeyboardInaccessibleWidget">

                        <ImageView
                            android:layout_width="61dp"
                            android:layout_height="51dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/studymaterial"
                            android:clickable="false"
                            android:padding="10dp"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="@string/study_material"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/attendance"
                        android:clickable="true"

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="61dp"
                            android:layout_height="51dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"

                            android:scaleType="fitXY"
                            android:src="@drawable/attendence"
                            android:clickable="false"
                            android:padding="10dp"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="@string/attendance"
                            android:textColor="@android:color/black" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/examhallallotment"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="81dp"
                            android:layout_height="51dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"

                            android:scaleType="fitXY"
                            android:src="@drawable/examhall"
                            android:clickable="false"
                            android:padding="10dp"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="@string/exam_hall_allotment"
                            android:textColor="@android:color/black" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/contactus"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="61dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"

                            android:scaleType="fitXY"
                            android:src="@drawable/contacts"
                            android:clickable="false"
                            android:padding="10dp"
                            android:contentDescription="@string/todo" />

                        <TextView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="@string/contact_us"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buseslocation"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:focusable="true">

                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@drawable/bus"
                           android:clickable="false"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/todo" />

                        <RelativeLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                             android:layout_height="wrap_content">
                            <TextView
                                android:clickable="false"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/buses_location"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/aboutus"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:focusable="true"
                        tools:ignore="UselessParent">

                        <ImageView

                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_group_24"
                            android:clickable="false"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/todo" />
                        <TextView
                            android:clickable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center_horizontal"
                            android:text="@string/about_us"
                            android:textColor="@android:color/black" />
                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="0.8dp"
                android:background="@color/GRAY" />

            <TextView
                android:id="@+id/quot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="@string/quot"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginEnd="10dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
